<%= render "navbar" %>

<br><h2 class="text-center">Create a New Pin!</h2><br>
<div class="col-md-4 col-md-offset-4">
<%= form_for @pin do |f| %>
  <div class="form-group">
  <%= f.label "Post URL:" %>
  <%= f.text_field :url, class: "form-control" %> 
  </div>
  
  <div class="form-group">
  <%= f.label "Comment on this (minimum 10 characters):" %>
  <%= f.text_field :comment, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label "Upload an image here (optional): " %>
  <%= f.text_field :img, class: "form-control" %>
  </div>

  <%= f.submit "New Pin!", class: "btn btn-info center-block"%>
<% end %>
</div>