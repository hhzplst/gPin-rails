<%= render "navbar" %>

<br><h2 class="text-center">Edit this Pin!</h2><br>
<div class="col-md-4 col-md-offset-4">
<%= form_for @pin do |f|%>
  <div class="form-group">
  <%= f.label "Post URL: " %>
  <%= f.text_field :url, class: "form-control" %> 
  </div>
  
  <div class="form-group">
  <%= f.label "Comment: " %>
  <%= f.text_field :comment, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label "Image: " %>
  <%= f.text_field :img, class: "form-control" %>
  </div>

  <%= f.submit "Update", class: "btn btn-info center-block"%>
<% end %>
</div>